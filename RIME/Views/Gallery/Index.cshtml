@model IEnumerable<RIME.Models.Evidence>

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>Gallery</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS
    ================================================== -->
    <link href='http://fonts.googleapis.com/css?family=Oswald' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/bootstrap-responsive.css">
    <link rel="stylesheet" href="/css/jquery.lightbox-0.5.css">
    <link rel="stylesheet" href="/css/custom-styles.css">
    <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <link rel="stylesheet" href="css/style-ie.css"/>
    <![endif]-->
    <!-- Favicons
    ================================================== -->
    <link rel="shortcut icon" href="/img/favicon.ico">
    <link rel="apple-touch-icon" href="/img/apple-touch-icon.png">
    <link rel="apple-touch-icon" sizes="72x72" href="/img/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="114x114" href="/img/apple-touch-icon-114x114.png">
    <!-- JS
    ================================================== -->
    <script src="http://code.jquery.com/jquery-1.8.3.min.js"></script>
    <script src="/js/jquery.easing.1.3.js"></script>
    <script src="/js/bootstrap.js"></script>
    <script src="/js/jquery.prettyPhoto.js"></script>
    <script src="/js/jquery.flexslider.js"></script>
    <script src="/js/jquery.quicksand.js"></script>
    <script src="/js/jquery.custom.js"></script>
    <script src="/js/jquery.marquee.js"></script>

</head>
<body>
  

        <!-- Page Content
        ================================================== -->
        <div class="row">
            <!--Search-->

            <!-- Gallery Items
            ================================================== -->
            <div class="span12 gallery">
                <ul id="filterOptions" class="gallery-cats clearfix">
                    <li class="active"><a href="#" class="all">All</a></li>
                    <li><a href="#" class="Media">Media</a></li>
                    <li><a href="#" class="World">World</a></li>
                    <li><a href="#" class="Clip">Clip</a></li>
                    <li><a href="#" class="Figure">Figure</a></li>
                </ul>

                <section>
                    <div class="input-append">
                        <form method="post" action="/Gallery/Index/">
                            <input id="title" name="title" size="16" type="text" placeholder="Title"><!--<button class="btn" type="submit"><i class="icon-filter"></i></button>-->
                            <input id="author" name="author" size="16" type="text" placeholder="Author">
                            <input id="content" name="content" size="16" type="text" placeholder="Content">
                            <input id="date" name="date" size="16" type="date" placeholder="Dates">
                            <button id="submit" class="btn" type="submit"><i class="icon-search"></i></button>
                        </form>
                    </div>
                </section>
                <div class="row clearfix">
                    <ul class="gallery-post-grid holder">
                        @foreach(var video in Model)
                        {
                        <li class="span3 gallery-item" data-id="id-@video.EvidenceId" data-type="@video.Tags.FirstOrDefault().Categoty">
                            <iframe src="@video.EvidencePath" width="270" height="220"  webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
                            <span class="project-details">@Html.ActionLink(video.Title, "Evidence", "Blog", new { id = video.EvidenceId }, "")@video.Prolog</span>
                        </li>
                        }
                    </ul>
                </div>
                <!-- Pagination -->
                <div class="pagination">
                   
                </div>
            </div><!-- End gallery list-->
        </div><!-- End container row -->

    </div> <!-- End Container -->
   
    <!-- Scroll to Top -->
    <div id="toTop" class="hidden-phone hidden-tablet">Back to Top</div>

</body>
</html>
