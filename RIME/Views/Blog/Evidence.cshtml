                </ul>
                <script type="text/javascript">
                    $(function () {
                        $listContainer = $("#tweets_list");
                        $.getJSON("/Blog/GetTweets", function (result) {
                            $.each(result, function (i, field) {
                                var value = new Date(parseInt(field.CreatedAt.replace("/Date(", "").replace(")/", ""), 10));
                                var date = value.toLocaleString();
                                $listContainer.append('<li><a href="#"><i class="icon-share-alt"></i> ' + field.User.ScreenNameResponse + " </a>" + field.Text + " | " + date + " </li>");
                            });

                            $('#tweets').vTicker('init', {
                                speed: 2000,
                                pause: 1000,
                                showItems: 5,
                                padding: 4
                            });
                        });
                    });

                </script>
